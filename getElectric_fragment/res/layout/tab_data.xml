<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/xml_tab_drxiaoqu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="right"
        android:text="漳州校区芙蓉"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/xml_tab_drlou"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="芙蓉1"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/xml_tab_txtroomid"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:text="0401"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="缴费代号:"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/xml_code"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:text="26010401"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="余额:"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/xml_tab_moneyinfo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:text="122元"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="电量:"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/xml_tab_elecinfo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:text="666度"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="right"
            android:text="更新时间:"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/xml_tab_timeinfo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left"
            android:text="6-6 66:66"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center" >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/xml_btn_bind"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="15dp"
            bootstrapbutton:bb_icon_left="fa-cog"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="inverse" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/xml_btn_spinner"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            bootstrapbutton:bb_icon_left="fa-refresh"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="default" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:text="--->" />

</LinearLayout>